<DieResult@Widget>:
    size: 200, 200
    size_hint: None, None
    canvas:
        Color:
            rgb: 0.5, 0.5, 1
        Rectangle:
            texture: self.texture
            size: self.size
            pos: self.pos

<DieButton@Button>:
    size: 200, 140
    size_hint: None, None
    pos_hint: {'center_x': 0.5}
    font_size: 20
    background_color: 0.25, 0.5, 1, 1

<DieRoller>:
    result: result
    BoxLayout:
        size: root.size
        orientation: 'vertical'
        DieButton:
            text: "Roll D6"
            on_press: root.do_roll('D6')
        DieButton:
            text: "Roll D8"
            on_press: root.do_roll('D8')
        DieButton:
            text: "Roll D10"
            on_press: root.do_roll('D10')
        DieButton:
            text: "Roll D12"
            on_press: root.do_roll('D12')
        DieResult:
            id: result
            pos_hint: {'center_x': 0.5}
