#:import BoxLayout kivy.uix.boxlayout
#:import Button kivy.uix.button
#:import Widget kivy.uix.widget
#:import Canvas kivy.graphics.instructions

<DieRoller>:
  BoxLayout:
    size: root.size
    orientation: "vertical"
    
    Button:
      text: "Roll D6"

    Button:
      text: "Roll D8"

    Button:
      text: "Roll D10"

    Button:
      text: "Roll D12"

    Widget:
      canvas:
        Color:
          rgb: (1, 0, 0)

        Rectangle:
          size: self.size
          pos: self.pos
          source: "kivy-icon-512.png"
